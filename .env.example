# Trading System v2.0 Configuration
# Copy this file to .env and fill in your values

# === REQUIRED ===
# KiteConnect API credentials from Zerodha developer console
KITE_API_KEY=your_api_key
KITE_API_SECRET=your_api_secret

# Access token (obtained via OAuth flow - refreshed daily)
KITE_ACCESS_TOKEN=your_access_token

# === PRODUCTION REQUIRED ===
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading

# Encryption key for storing credentials securely
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# === OPTIONAL ===
# Telegram notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Trading mode: 'paper' or 'live'
# IMPORTANT: Only set to 'live' after thorough testing!
TRADING_MODE=paper

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
